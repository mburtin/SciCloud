{
  "name": "scicloud",
  "version": "0.1.0",
  "type": "module",
  "description": "SciCloud - Cloud services for scientific research",
  "scripts": {
    "dev": "concurrently \"pnpm db:start\" \"pnpm db:functions\" \"pnpm web:dev\"",
    "db:start": "cd apps/supabase && pnpx supabase start",
    "db:stop": "cd apps/supabase && pnpx supabase stop",
    "db:reset": "cd apps/supabase && pnpx supabase db reset",
    "db:status": "cd apps/supabase && pnpx supabase status",
    "db:functions": "sleep 5 && cd apps/supabase && pnpx supabase functions serve",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "pnpm --filter web type-check",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug"
  },
  "keywords": [
    "scientific research",
    "data analysis",
    "project management",
    "cloud services"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.14.0",
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": "^22.18.0",
      "onFail": "download"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.54.2",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "concurrently": "^9.2.0",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "pinia": "^3.0.3",
    "vite": "^7.1.3",
    "vitest": "^3.2.4",
    "vue": "^3.5.18"
  }
}
