{
  "name": "scicloud",
  "version": "1.0.0",
  "type": "module",
  "description": "SciCloud - Cloud services for scientific research",
  "scripts": {
    "dev": "concurrently \"pnpm db:start\" \"pnpm db:functions\" \"pnpm --filter @scicloud/web-app dev\"",
    "db:start": "cd apps/supabase && pnpx supabase start",
    "db:stop": "cd apps/supabase && pnpx supabase stop",
    "db:reset": "cd apps/supabase && pnpx supabase db reset",
    "db:status": "cd apps/supabase && pnpx supabase status",
    "db:functions": "sleep 5 && cd apps/supabase && pnpx supabase functions serve",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "pnpm --filter @scicloud/web-app type-check",
    "test": "pnpm --filter @scicloud/tests test",
    "test:ui": "pnpm --filter @scicloud/tests test:ui",
    "test:coverage": "pnpm --filter @scicloud/tests test:coverage",
    "test:e2e": "pnpm --filter @scicloud/tests test:e2e",
    "test:e2e:ui": "pnpm --filter @scicloud/tests test:e2e:ui",
    "test:e2e:headed": "pnpm --filter @scicloud/tests test:e2e:headed",
    "test:e2e:debug": "pnpm --filter @scicloud/tests test:e2e:debug"
  },
  "keywords": [
    "scientific research",
    "data analysis",
    "project management",
    "cloud services"
  ],
  "author": "Michael BURTIN",
  "license": "MIT",
  "packageManager": "pnpm@10.15.0",
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": "^22.18.0",
      "onFail": "download"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.33.0",
    "globals": "^16.3.0"
  }
}
